{
  "name": "homebridge-tydom",
  "version": "0.17.7",
  "description": "Homebridge plugin to manage Tydom devices by Delta Dore",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "Olivier Louvignes <olivier@mgcrea.io>",
  "repository": "github:mgcrea/homebridge-tydom",
  "license": "MIT",
  "keywords": [
    "homebridge-plugin"
  ],
  "engines": {
    "node": ">=0.12.0",
    "homebridge": ">=0.2.0"
  },
  "scripts": {
    "start": "NODE_TLS_REJECT_UNAUTHORIZED=0 DEBUG=homebridge-tydom homebridge -D -U ./.homebridge -P .",
    "start:node": "NODE_TLS_REJECT_UNAUTHORIZED=0 NODE_PATH=src/ babel-node --extensions \".ts,.tsx\" src/",
    "start:watch": "nodemon --ext \"ts,tsx\" --watch \"src/\" --exec \"yarn start\"",
    "start:prod": "yarn spec:watch",
    "clean": "rm -rf .homebridge/persist/* .homebridge/accessories/*",
    "test": "yarn pretty && yarn lint && yarn spec",
    "spec": "NODE_TLS_REJECT_UNAUTHORIZED=0 CI=true jest --runInBand --colors --passWithNoTests",
    "spec:watch": "yarn spec --watch",
    "spec:coverage": "yarn spec --coverage",
    "lint": "eslint --ext .ts src/",
    "pretty": "prettier --check '{src,test}/**/*.ts'",
    "pretty:fix": "prettier --write '{src,test}/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "build": "yarn build:source && yarn build:typings && rsync -avh --remove-source-files lib/src/* lib/ && rm -rf lib/src",
    "build:source": "babel --source-maps --extensions .js,.ts --out-dir lib/ --delete-dir-on-start --ignore **/__tests__ src/",
    "build:typings": "tsc --declaration",
    "build:watch": "yarn build:source --watch --verbose",
    "prepare": "yarn build"
  },
  "dependencies": {
    "@babel/runtime": "^7.9.2",
    "chalk": "^4.0.0",
    "debug": "^4.1.1",
    "fakegato-history": "^0.5.6",
    "hap-nodejs": "^0.6.4",
    "lodash": "^4.17.15",
    "source-map-support": "^0.5.18",
    "tydom-client": "^0.11.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.5",
    "@babel/plugin-proposal-optional-chaining": "^7.9.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "7.9.5",
    "@babel/preset-typescript": "^7.9.0",
    "@types/debug": "^4.1.5",
    "@types/jest": "^25.2.1",
    "@types/lodash": "^4.14.150",
    "@types/node": "^13.13.2",
    "@types/node-persist": "^3.0.0",
    "@types/ws": "^7.2.4",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "babel-plugin-module-name-mapper": "^1.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "homebridge": "^0.4.53",
    "jest": "^25.4.0",
    "nock": "^12.0.3",
    "prettier": "^2.0.5",
    "typescript": "^3.8.3"
  }
}
